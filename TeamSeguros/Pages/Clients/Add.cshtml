@page
@model TeamSeguros.Pages.Clients.AddModel
@{
    ViewData["Title"] = "Add";
}

<h1>Información del cliente</h1>

<form method="post">
    <div class="row">
        <div class="col">
            <label>Nombres: </label>
            <input asp-for="Client.Nombres" class="form-control" />

        </div>
        <div class="col">

            <label>Apellidos: </label>
            <input asp-for="Client.Apellidos" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label>Tipo de documento: </label>
                <select class="form-control" id="sel1" asp-for="Client.TipoDocumento">
                    @foreach (var doc in Model.TipoDocumento)
                    {
                        <option value="@doc">@doc</option>
                    }
                </select>
        </div>
        <div class="col">

            <label>Documento: </label>
            <input asp-for="Client.NumeroDocumento" class="form-control"/>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label>Ciudad de Residencia: </label>
            <input asp-for="Client.CiudadResidencia" class="form-control"/>
        </div>
        <div class="col">

            <label>Fecha de nacimiento: </label>
            <input asp-for="Client.FechaNacimiento" class="form-control"/>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-2">
            <a asp-page="./Index" class="btn btn-danger btn-block"><i class="fas fa-arrow-left"></i> Ir Atrás</a>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary btn-block"><i class="far fa-save"></i> Guardar</button>
        </div>
    </div>
</form>
